{
  "image": {
    "imagePullPolicy": "Always",
    "ports": [
      {
        "name": "codeserver",
        "containerPort": 8080
      },
      {
        "name": "fastcgi",
        "containerPort": 9000
      }
    ],
    "env": [
      {
        "name": "APP_ROOT",
        "value": "/var/www/html"
      },
      {
        "name": "WEB_ROOT",
        "value": "/var/www/html/docroot"
      }
    ],
    "volumeMounts": [
      {
        "name": "app-root",
        "mountPath": "/var/www/html"
      }
    ],
    "repository": "devpanel/php-fpm",
    "tag": "7.4"
  },
  "sidecars": [
    {
      "imagePullPolicy": "Always",
      "ports": [
        {
          "name": "http",
          "containerPort": 80
        }
      ],
      "env": [
        {
          "name": "NGINX_SERVER_ROOT",
          "value": "/var/www/html/docroot"
        }
      ],
      "volumeMounts": [
        {
          "name": "app-root",
          "mountPath": "/var/www/html"
        }
      ],
      "image": "wodby/nginx:latest",
      "name": "nginx"
    }
  ],
  "deployment": {
    "strategy": "RollingUpdate"
  },
  "podAnnotations": {},
  "volumes": [
    {
      "name": "app-root",
      "storageClass": "ebs-gp2",
      "capability": "10Gi"
    }
  ]
}